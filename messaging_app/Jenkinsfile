pipeline {
  agent any

  environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')
    IMAGE_NAME = "wandart/messaging_app"
    IMAGE_TAG = "${env.BUILD_NUMBER}"
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/WANDART291/alx-backend-python.git', credentialsId: 'github-creds'
      }
    }

    stage('Install dependencies & Run tests') {
      steps {
        sh '''
          python3 -m venv venv
          . venv/bin/activate
          pip3 install --upgrade pip
          pip3 install -r messaging_app/requirements.txt
          pip3 install pytest pytest-cov
          cd messaging_app
          pytest --junitxml=report.xml --cov=./ --cov-report=xml || true
        '''
      }
      post {
        always {
          junit 'messaging_app/report.xml'
          archiveArtifacts artifacts: 'messaging_app/htmlcov/**', allowEmptyArchive: true
        }
      }
    }

    stage('Build Docker image') {
      steps {
        sh '''
          echo "Simulating Docker build (Docker not available here)"
          echo "Would normally build with: docker build -t ${IMAGE_NAME}:${IMAGE_TAG} messaging_app/"
        '''
      }
    }
  }
}
